<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--信号时会显示的：量子多空，MACD，KDJ，ENE，RSI-->
    <RadioGroup
        android:id="@+id/rg_stock_details_signal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">
        <!--占位符-->
        <RadioButton
            android:id="@+id/rb_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb_liangziduokong"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:background="@color/black"
            android:button="@null"
            android:paddingHorizontal="8dp"
            android:text="量子多空"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:checked="true" />

        <RadioButton
            android:id="@+id/rb_macd"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            android:button="@null"
            android:gravity="center"
            android:text="云MACD"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rb_kdj"
            android:layout_width="54dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            android:button="@null"
            android:gravity="center"
            android:text="云KDJ"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/rb_ene"
            android:layout_width="54dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            android:button="@null"
            android:gravity="center"
            android:text="云ENE"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </RadioGroup>

    <com.example.androiddemo.draw.DrawComponent
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>